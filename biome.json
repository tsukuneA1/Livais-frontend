{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "lineEnding": "crlf",
    "enabled": true,
    "indentStyle": "space",
    "formatWithErrors": true,
    "ignore": [
      "**/coverage/**",
      "**/dist/**",
      "**/fabbrica/**",
      "**/.next/**",
      "**/.vercel/**",
      "**/node_modules/**",
      "*.html",
      "*.css",
      "$path.ts"
    ]
  },
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "error",
        "useHookAtTopLevel": "error",
        "useJsxKeyInIterable": "error"
      },
      "complexity": {
        "noUselessStringConcat": "error",
        "noUselessUndefinedInitialization": "error",
        "noVoid": "error",
        "useArrowFunction": "error"
      },
      "nursery": {
        "noExportedImports": "error",
        "useSortedClasses": "error",
        "noHeadElement": "error",
        "noImgElement": "error"
      },
      "style": {
        "noDefaultExport": "error",
        "noNegationElse": "error",
        "useBlockStatements": "off",
        "useFragmentSyntax": "error",
        "useFilenamingConvention": {
          "level": "error",
          "options": {
            "requireAscii": true,
            "strictCase": true,
            "filenameCases": ["kebab-case"]
          }
        }
      },
      "suspicious": {
        "noCommentText": "error"
      }
    },
    "ignore": [
      "**/coverage/**",
      "**/dist/**",
      "**/fabbrica/**",
      "**/.next/**",
      "**/.vercel/**",
      "**/node_modules/**",
      "*.html",
      "*.css",
      "*.js",
      "*.config.*",
      "$path.ts"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single"
    }
  },
  "overrides": [
    {
      "include": ["*.ts", "*.tsx"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "error"
          }
        }
      }
    },
    {
      "include": ["src/pages/**/*", "src/app/**/*"],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    }
  ]
}
